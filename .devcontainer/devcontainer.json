{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",

  "customizations": {
    "codespaces": {
      "openFiles": ["README.md", "HDL_Door_Schedule_Extractor_v5.py"]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "updateContentCommand": "sudo apt update && sudo apt install -y poppler-utils && pip3 install --user -r requirements.txt && pip3 install --user streamlit && echo 'âœ… Poppler and Python deps installed'",

  "postAttachCommand": {
    "server": "streamlit run HDL_Door_Schedule_Extractor_v5.py --server.enableCORS false --server.enableXsrfProtection false"
  },

  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },

  "forwardPorts": [8501]
}
